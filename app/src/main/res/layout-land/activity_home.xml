<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imageButtonGrades"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="160dp"
                    android:layout_marginEnd="631dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_grade"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/imageButtonLessonPlan"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_lesson_plan"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButtonCalendar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="160dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_calendar"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/imageButtonTeachers"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_teacher"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButtonChat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_chat"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/imageButtonEmail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_email"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButtonUserProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_verified_user"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/imageButtonSettings"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_settings"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButtonDeanery"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_deanery"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/imageButtonLogout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="160dp"
                    android:contentDescription="@string/imageDescrption"
                    app:srcCompat="@drawable/ic_logout"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>

        </LinearLayout>
</ScrollView>