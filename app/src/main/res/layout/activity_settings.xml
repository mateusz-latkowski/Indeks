<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewSetImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewSetImage"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/buttonImageUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="80dp"
                android:background="@drawable/rounded_buttons"
                android:text="@string/buttonImageUpload"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/buttonImageChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:background="@drawable/rounded_buttons"
                android:text="@string/buttonImageChoose"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewChangePassword"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:importantForAutofill="no"
            android:background="@drawable/rounded_inputs"
            android:layout_gravity="center"
            android:hint="@string/editTextNewPassword"
            android:textAlignment="center"
            android:inputType="textPassword"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/editTextNewPassword2"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_inputs"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:hint="@string/editTextNewPassword2"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textAlignment="center"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_buttons"
            android:text="@string/buttonChangePassword"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewChangeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewChangeData"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/editTextChangeStreet"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_inputs"
            android:hint="@string/editTextChangeStreet"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/editTextChangeCity"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_inputs"
            android:hint="@string/editTextChangeCity"
            android:textAlignment="center"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/editTextChangePostalAddress"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:inputType="textPostalAddress"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_inputs"
        android:hint="@string/editTextChangePostalAddress"
        android:importantForAutofill="no"
        android:textAlignment="center"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/editTextChangePhoneNumber"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:background="@drawable/rounded_inputs"
        android:importantForAutofill="no"
        android:hint="@string/editTextChangePhoneNumber"
        android:textAlignment="center"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/buttonChangeData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_buttons"
        android:text="@string/buttonChangeData"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>